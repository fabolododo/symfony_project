{% extends 'base.html.twig' %}

{% block title %}Hello HelloController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style="text-align: center;">Movies</h1>


  {% for data in contents %}
    <div class="card mb-3" style="max-width: 650px; background-color:lightgrey;">
      <div class="row no-gutters">
        <div class="col-md-4">
        {% if data.Poster != "N/A" %}
          <img src="{{ data.Poster }}" class="card-img" alt="poster_path">
        {% endif %}
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title text-primary">{{ data.Title }}</h3>
            <p class="card-text" style="font-size:0.8em;">{{ data.Year }}</p>
            <p class="card-text">{{ data.Type }}</p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
