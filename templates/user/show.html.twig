{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <table class="table table-striped">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr> #}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ user.admin ? '✅' : '❌' }}</td>
            </tr>
        </tbody>
    </table>
    {% if app.user.admin %}
    <div><a href="{{ path('user_index') }}"><button class="btn btn-sm btn-primary text-light">back to list</button></a>
    {% endif %}
    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-sm btn-warning text-light">edit</button></a>
    {{ include('user/_delete_form.html.twig') }}</div>
{% endblock %}
