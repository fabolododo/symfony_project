{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center">User index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Admin</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.getId }}</td>
                <td>{{ user.getUsername }}</td>
                <td>{{ user.getEmail }}</td>
                {% if app.user.admin %}
                    <td>{{ user.admin ? '✅' : '❌' }}</td>
                {% endif %}
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><button class="btn btn-sm btn-success text-light btn-block">show</button></a>&nbsp
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-sm btn-warning text-dark btn-block">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}"><button class="btn btn-sm btn-primary text-light">Create new</button></a>
{% endblock %}
